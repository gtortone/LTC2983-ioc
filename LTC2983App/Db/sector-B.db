#
# Temperature values average
#
record(calc,"$(SNAME):TEMP:AVG") {
  field(INPA,"$(SNAME):TEMP:$(LABEL01)")
  field(INPB,"$(SNAME):TEMP:$(LABEL02)")
  field(INPC,"$(SNAME):TEMP:$(LABEL03)")
  field(CALC,"(A+B+C)/3")
  field(EGU,"C")
  field(HIHI,35)
  field(HIGH,28)
  field(LOW,18)
  field(LOLO,12)
}
